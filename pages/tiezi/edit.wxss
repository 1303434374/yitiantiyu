.fabu{display:block;width:93%;height:auto;margin:3% auto;}
.fabu .top{display: block;width:93%;height:35px;margin-top:5%;border:1px solid #eee;border-radius:5px;font-size:12px;line-height: 35px;padding:0 10px}
.fabu .center{display: block;width:93%;height:auto;margin-top:5%;border:1px solid #eee;border-radius:5px;font-size:12px;padding:10px 10px 0 10px;}
.fabu textarea{display: block;width:100%;height:140px;}
.upload {width: 100%; height: auto; background: #fff;margin-bottom:10px;}
.upload .content_add { width: 25%; height: 100%; display: inline-block;}
.upload  .add_img { border: 1rpx solid #eee; margin-left: 5%; }
.upload .delete{ width: 100%; height: 50rpx; top: 0; z-index: 500; }
.upload .delete wx-image{ width: 50rpx; height: 50rpx; right: 2%; top: 0; }
.content_add>wx-image { width: 90%; max-height: 150rpx; }
.fabu .bottom{position:absolute;width:92%;height:38px;bottom:4%;}
.fabu .bottom .fabu_handle{display:block;width:100%;height:38px;line-height: 38px;text-align: center;margin:0 auto;background:#00B8FF;color:#fff;font-size:13px;border-radius:5px} 
.optClass{
    background-color: #fff;
    box-sizing: border-box;
    font-size: 32rpx;
    color: #333;
    display: flex;
    align-items: center;
    padding:0 30rpx;
    flex-wrap:wrap;
}
.optClass .uploadimgbox{
    flex: 0 0 33.333%;
    position: relative;
    box-sizing: border-box;
    padding: 10rpx;
    margin-bottom: 10rpx;
}
.optClass .uploadimgbox .progress{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    /* background-color: rgba(0, 0, 0, .5); */
    color: #00B8FF;
    font-size: 30rpx;
    text-align: center;
    line-height: 208rpx;
    z-index: 99;
}
.optClass .uploadimgbox .delbtn{
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    top: 10rpx;
    right: 10rpx;
    background-color: rgba(0, 0, 0, .5);
    color: #fff;
    font-size: 30rpx;
    text-align: center;
    line-height: 50rpx;
    z-index: 98;
}
.optClass .uploadimg,.optClass .uploadbtn{
    display: block;
    width: 100%;
    height: 208rpx;
}
.fabu .del{position:absolute;width:92%;height:38px;bottom:13.5%;border:1px solid #00B8FF;color:#00B8FF;text-align: center;line-height: 38px;font-size:13px;border-radius:5px}