.botts .l{display:block;width:80%;float:left;height:100%;}
.botts .l input{display: block;width:90%;padding:0 10px;line-height:40px;height:100%;margin:0 auto;font-size:13px}
.botts .r{display:block;width:18%;height:100%;float:right;text-align: center;font-size:13px;line-height:40px;color:#999}
.center .no{display: block;width:60%;height:35px;line-height: 35px;text-align: center;font-size:14px;color:#999;margin:10% auto}







