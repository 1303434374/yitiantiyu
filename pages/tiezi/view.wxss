li{display: block;width:100%;height:auto;background:#fff;border-radius:5px;margin-top:5px;margin-bottom:3%}
li .top{display: block;width:100%;height:40px;line-height: 40px;}
li .top .l{display: block;float:left;width:70%;height:100%;}
li .top .l image{width:33px;height:33px;border-radius:50%;display: block;margin-left:2%;margin-top:1px}
li .top text{display:block;width:79%;height:100%;font-size:14px;color:#999;float:right;margin-top:-38px;line-height:48px}
li .top .r{display: block;float:right;width:26%;height:100%;text-align: right;line-height:40px;font-size:14px;padding:0 8px 0 0;color:#999}
li .title{display: block;width:96%;height:30px;line-height: 30px;overflow: hidden;white-space: nowrap;text-overflow: ellipsis;font-size:13px;padding:0 4px}
li .content{display: block;width:96%;height:auto;line-height:18px;overflow: hidden;font-size:13px;padding:0 4px;word-break: break-all;word-wrap: break-word;color:#999}
li .image{display: block;width:96%;height:auto;line-height:18px;overflow: hidden;font-size:13px;padding:0 4px;}
li .image .one_video{display: block;width:100%;height:140px;margin-top:5px;margin-bottom:5px;margin:0 auto}
li .image .one_video .uploadimg{display: block;width:90%;height:90%;margin:0 auto}
li .image .one_pic{display: block;width:100%;height:140px;margin-top:5px;margin-bottom:5px}
li .image .one_pic image{display: block;width:100%;height:100%}
li .image .two_pic{display:inline-block;width:30%;height:100px;margin-top:5px;margin-bottom:5px;margin-left:5px;}
li .image .two_pic image{display: block;width:100%;height:100%}
li .image .three_pic{display:inline-block;width:31%;height:100px;margin-top:5px;margin-bottom:5px;margin-left:3px;}
li .image .three_pic image{display: block;width:100%;height:100%}
li .bott{display: block;width:100%;height:35px;line-height: 38px;margin-top:-3%}
li .bott label{display:inline-block;width:31.5%;margin-left:3px;line-height:35px;height:30px;text-align: center;font-size:12px;color:#999;}
li .bott label image{display:block;width:18px;height:18px;margin-left:15%;margin-top:6%;}
li .bott label i{display:block;height:28px;width:60%;margin-left:5%;margin-top:-27px;float:right;text-align: left}
li .d{display: block;width:100%;height:10px;line-height:10px}
.center{display: block;width:100%;height:auto;border-top:5px solid #eee}
.center .top{display: block;width:100%;height:45px;line-height: 45px;padding:0 5px;font-size:14px;border-bottom:1px solid #eee;margin:0 auto}
.center .c{display: block;width:100%;height:auto;margin:0 auto;margin-bottom:10%;}
.center .c label{display:inline-block;width:98%;height:auto;border-bottom:1px solid #eee;}
.center .c label .l{display: block;float:left;width:18%;height:100%;}
.center .c label .l .l_l{display: block;width:40px;height:40px;margin:10% auto;border-radius:50%}
.center .c label .l .l_l image{display:block;width:100%;height:100%;border-radius:50%}
.center .c label .r{display: block;float:right;width:80%;height:100%;}
.center .c label .r .t{display: block;width:100%;height:35px;line-height: 35px;margin:0 auto;}
.center .c label .r .t .t_l{display: block;float: left;width:60%;height:100%;font-size:14px}
.center .c label .r .t .t_r{display: block;float: right;width:30%;height:100%;font-size:12px;text-align: right;color:#999;line-height:42px;}
.center .c label .r .b{display: block;width:100%;height:auto;line-height:22px;font-size:14px;margin:2% auto;word-break:break-all;word-wrap:break-word;}



