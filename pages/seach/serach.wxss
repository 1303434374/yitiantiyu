page{background: #eee}
.shetuan{display: block;width:100%;height:auto}
.shetuan .top{display: block;width:100%;height:45px;line-height: 45px;background: #fff}
.shetuan .top .l{display: block;float:left;width:78%;height:100%;padding:0 10px;font-size:13px;color:#999}
.shetuan .top .r{display: block;width:30px;height:30px;float:right;margin-right:10px;margin-top:6px;}
.shetuan .top .r image{display: block;width:90%;height:90%;margin:5% auto}
.shetuan .center{display: block;width:94%;height:auto;margin:3% auto;}
.shetuan .center li{display: block;width:100%;height:130px;margin-top:2%;background: #fff;border-radius:5px;margin-bottom:3%}
.shetuan .center li .top{display: block;width:100%;height:73%;border-bottom:1px solid #eee}
.shetuan .center li .l{display:block;width:50px;height:65px;margin-top:4%;margin-left:3%}
.shetuan .center li .l .l_l{display:inline-block;width:70px;height:65px;margin-left:-10px;border-radius:2px;}
.shetuan .center li .l .l_l image{display: block;width:80%;height:80%;margin:10% auto}
.shetuan .center li .c{display:inline-block;width:51%;height:100%;}
.shetuan .center li .c text{display:inline-block;width:95%;height:30px;line-height:30px;margin-top:8%;padding:0 5px;font-size:15px;}
.shetuan .center li .c i{display:block;width:95%;height:30px;line-height:32px;padding:0 5px;font-size:12px;color:#999;overflow: hidden;white-space: nowrap;text-overflow: ellipsis;}
.shetuan .center li .r_r{display: block;float: right;width:20%;height:100%;}
.shetuan .center li .r_r .join{display: block;width:90%;height:30px;margin:38% auto;background:#00B8FF;color:#fff;text-align: center;line-height: 30px;font-size:13px;margin-right:7px;border-radius:8px}
.shetuan .center li .bott{display: block;width:100%;height:21%;margin-top:2px;}
.shetuan .center li .bott text{display: inline-block;width:48%;height:100%;margin-left:1%;text-align: center;line-height:29px;color:#999;font-size:13px}
.no{display: block;width:50%;height:28px;line-height: 28px;text-align: center;margin:15% auto;color:#999;font-size:13px}

.flex{
  display: flex;
  justify-content: space-between;
  width: 700rpx;
  margin: 40rpx auto;
  flex-wrap: wrap;
}

.hid{
  display: none;
}

.search {
  width: 700rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  padding: 0 35rpx;
  height: 60rpx;
  background-color: #fff;
  border-radius: 40rpx;
  z-index: 2;
  box-sizing: border-box;
  margin-top: 40rpx;
}

.search input {
  flex: 1;
  height: 100%;
  color: #666;
  font-size: 26rpx;
}

.search .placeholder {
  color: #b2b2b2;
}

.search image {
  width: 26rpx;
  height: 26rpx;
  margin-left: 20rpx;
}





















